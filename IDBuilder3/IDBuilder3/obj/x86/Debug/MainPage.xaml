<Page
    x:Class="IDBuilder3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IDBuilder3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="Auto" Height="Auto" RequestedTheme="Default">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Height="30" FontSize="20" Margin="0,12,0,0">全局唯一标识符</TextBlock>
        <TextBox x:ConnectionId='2' Name="tb1" Grid.Row="1" Height="34" FontSize="16" Text="待生成"></TextBox>
        <TextBlock Grid.Row="2" Height="30" FontSize="20" Margin="0,12,0,0">便携识别码</TextBlock>
        <TextBox x:ConnectionId='3' Name="tb2" Grid.Row="3" Height="34" FontSize="16" Text="待生成"></TextBox>
        <TextBlock Grid.Row="4" Height="30" FontSize="20" Margin="0,12,0,0">年月日</TextBlock>
        <TextBox x:ConnectionId='4' Name="tb3" Grid.Row="5" Height="34" FontSize="16" Text="待生成"></TextBox>
        <Button x:ConnectionId='5' Grid.Row="6" FontSize="22"  HorizontalAlignment="Center" Width="510"                      >- GENERATE -</Button>
    
    </Grid>
</Page>

