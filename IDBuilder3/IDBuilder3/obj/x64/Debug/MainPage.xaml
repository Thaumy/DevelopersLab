<Page
    x:Class="IDBuilder3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IDBuilder3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="Auto" Height="Auto" RequestedTheme="Default">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Height="30" FontSize="20" Margin="0,12,0,0">全局唯一标识符(N型)</TextBlock>
        <TextBox x:ConnectionId='2' Name="tb1" Grid.Row="1" Height="38" FontSize="16" Text="待生成" Margin="0,0,0,20"></TextBox>
        <TextBlock Grid.Row="2" Height="30" FontSize="20" Margin="0,12,0,0">全局唯一标识符(D型)</TextBlock>
        <TextBox x:ConnectionId='3' Name="tb4" Grid.Row="3" Height="38" FontSize="16" Text="待生成" Margin="0,0,0,20"></TextBox>
        <TextBlock Grid.Row="4" Height="30" FontSize="20" Margin="0,12,0,0">简单标识</TextBlock>
        <TextBox x:ConnectionId='4' Name="tb2" Grid.Row="5" Height="38" FontSize="16" Text="待生成" Margin="0,0,0,20"></TextBox>
        <TextBlock Grid.Row="6" Height="30" FontSize="20" Margin="0,12,0,0">年月日</TextBlock>
        <TextBox x:ConnectionId='5' Name="tb3" Grid.Row="7" Height="38" FontSize="16" Text="待生成" Margin="0,0,0,20"></TextBox>
        <Button x:ConnectionId='6' Grid.Row="8" FontSize="22"  HorizontalAlignment="Center" Width="496"                      >- GENERATE -</Button>
    
    </Grid>
</Page>

